apiVersion: tekton.dev/v1beta1
kind: Pipeline
metadata:
  name: clone-build-push
spec:
  description: |
    This pipeline clones a git repo, builds a Docker image with Kaniko and
    pushes it to a registry
  params:
  - name: repo-url
    type: string
  - name: image-reference
    type: string
  - name: dockerfile-path
    type: string
  - name: ignore-rules
    type: string
  workspaces:
  - name: shared-data
#  - name: docker-credentials
  tasks:
  # Clone source code repository
  - name: fetch-source
    taskRef:
      name: git-clone
    workspaces:
    - name: output
      workspace: shared-data
    params:
    - name: url
      value: $(params.repo-url)
  # Execute python linting
  - name: pylint
    runAfter: ["fetch-source"]
    taskRef:
      name: pylint
    workspaces:
    - name: source
      workspace: shared-data
  # Execute python unit tests
  - name: pytest
    runAfter: ["pylint"]
    taskRef:
      name: python-coverage
    workspaces:
    - name: source
      workspace: shared-data
    params:
    - name: PYTHON
      value: "3.7"
  # Docker file linting
  - name: docker-lint
    runAfter: ["pytest"]
    taskRef:
      kind: Task
      name: hadolint
    workspaces:
    - name: source
      workspace: shared-data
    params:
    - name: ignore-rules
      value: $(params.ignore-rules)
    - name: dockerfile-path
      value: $(params.dockerfile-path)
  # Build OCI Image and push to local docker registry
  - name: build-push
    runAfter: ["docker-lint"]
    taskRef:
      name: kaniko
    workspaces:
    - name: source
      workspace: shared-data
    # - name: dockerconfig
    #   workspace: docker-credentials
    params:
    - name: IMAGE
      value: $(params.image-reference)
    - name: EXTRA_ARGS
      value: ["--insecure"]
